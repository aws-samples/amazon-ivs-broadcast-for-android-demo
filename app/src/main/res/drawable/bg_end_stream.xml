<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <ripple
            android:color="@color/broadcast_secondary_grey_color">
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/broadcast_grey_semi_transparent_color" />
                    <size
                        android:width="48dp"
                        android:height="48dp"/>
                    <stroke android:width="2.5dp"
                        android:color="@color/broadcast_primary_red_color"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item android:drawable="@drawable/ic_close" android:width="32dp" android:height="32dp" android:gravity="center"/>
</layer-list>
